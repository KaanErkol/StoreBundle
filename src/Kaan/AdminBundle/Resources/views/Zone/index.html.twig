{% extends 'AdminBundle::layout.html.twig' %}
{% block content %}
<div class="page-header">
    <h1 class="pull-left">Zones</h1>
    <div class="pull-right" style="margin-top:15px">
        <a class="btn btn-large btn-primary" href="{{ path('zone_create') }}">
            <i class="icon-white icon-plus"></i> Create
        </a>
    </div>
    <div class="clearfix"></div>
</div>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th style="width: 220px;">Last Updated</th>
            <th style="width: 120px;">Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for zone in zones %}
        <tr>
            <td><strong>{{ zone.name }}</strong>
                <blockquote>
                <div class="pull-right span3">
                    <ul class="unstyled">
                        {% for child in zone.Child %}
                            <li>{{ child.name }}</li>
                        {% endfor %}
                    </ul>
                </div>
                </blockquote>
            </td>
            <td>{{ zone.updatedAt | date }}</td>
            <td>
                <div class="btn-group">
                    <a href="{{ path('zone_update',{'id': zone.id}) }}" class="btn btn-primary">
                        <i class="icon-white icon-pencil"></i> Edit
                    </a>
                        <a href="#" class="btn btn-danger">
                            <i class="icon-white icon-trash"></i> Delete
                        </a>
                </div>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}