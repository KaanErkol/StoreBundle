{% extends 'AdminBundle::layout.html.twig' %}
{% block content %}
<div class="page-header">
    <h1 class="pull-left">Shipping Category</h1>
    <div class="pull-right" style="margin-top:15px">
    <a class="btn btn-large btn-primary" href="{{ path('shippingcategory_new') }}">
        <i class="icon-white icon-plus"></i> Create
    </a>
    </div>
    <div class="clearfix"></div>
</div>
<table class="records_list table table-bordered list">
    <thead>
        <tr>
            <th>Name</th>
            <th>Createdat</th>
            <th style="width: 120px;">Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td>{{ entity.name }}</td>
            <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>
                <div class="btn-group">
                        <a class="btn" href="{{ path('shippingcategory_show', { 'id': entity.id }) }}">
                            <i class="icon-eye-open"></i> Show
                        </a>
                        <a class="btn btn-primary" href="{{ path('shippingcategory_edit', { 'id': entity.id }) }}">
                            <i class="icon-pencil icon-white"></i> Edit
                        </a>
                </div>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}
{% block javascript %}

{% endblock %}