{% extends 'AdminBundle::layout.html.twig' %}
{% block content %}
<div class="page-header">
    <h1>Shipping Category</h1>
</div>
<table class="record_properties table table-bordered">
    <tbody>
        <tr>
            <th>Name</th>
            <td>{{ entity.name }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ entity.description }}</td>
        </tr>
        <tr>
            <th>Createdat</th>
            <td>{{ entity.createdAt|date('Y-m-d H:i:s') }}</td>
        </tr>
    </tbody>
</table>
<div class="btn-group pull-right">
    <a class="btn" href="{{ path('shippingcategory') }}">
        <i class="icon-circle-arrow-left"></i> Back
    </a>
    <a class="btn btn-primary" href="{{ path('shippingcategory_edit', { 'id': entity.id }) }}">
        <i class="icon-pencil icon-white"></i> Edit
    </a>
</div>
<form action="{{ path('shippingcategory_delete', { 'id': entity.id }) }}" method="post">
    {{ form_widget(delete_form) }}
    <button class="btn-danger btn" type="submit">Delete</button>
</form>


{% endblock %}