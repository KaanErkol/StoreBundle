{% extends 'AdminBundle::layout.html.twig' %}
{% block content %}
<div class="page-header">
    <h1>Taxation</h1>
</div>
<table class="record_properties table table-bordered">
    <tbody>
        <tr>
            <th>User</th>
            <td><a href="{{ path('user_show',{'id': entity.user.id }) }}">{{ entity.user.username }}</a></td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ entity.name }}</td>
        </tr>
        <tr>
            <th>City</th>
            <td>{{ entity.city }}</td>
        </tr>
        <tr>
            <th>Postcode</th>
            <td>{{ entity.postcode }}</td>
        </tr>
        <tr>
            <th>Adress</th>
            <td>{{ entity.adress }}</td>
        </tr>
        <tr>
            <th>Phone</th>
            <td>{{ entity.phone }}</td>
        </tr>
        <tr>
            <th>Shippingname</th>
            <td>{{ entity.shippingname }}</td>
        </tr>
        <tr>
            <th>Createdat</th>
            <td>{{ entity.createdat|date('Y-m-d H:i:s') }}</td>
        </tr>
    </tbody>
</table>
<div class="btn-group pull-right">
    <a class="btn" href="{{ path('adress',{'id': entity.user.id}) }}">
        <i class="icon-circle-arrow-left"></i> Back
    </a>
    <a class="btn btn-primary" href="{{ path('adress_edit', { 'id': entity.id }) }}?id={{ entity.user.id }}">
        <i class="icon-pencil icon-white"></i> Edit
    </a>
</div>
<form action="{{ path('adress_delete', { 'id': entity.id }) }}" method="post">
    {{ form_widget(delete_form) }}
    <button class="btn-danger btn" type="submit">Delete</button>
</form>
{% endblock %}