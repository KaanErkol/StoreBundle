{% extends 'AdminBundle::layout.html.twig' %}
{% block content %}
<div class="page-header">
    <h1>Product "{{ entity.name }}"</h1>
    <div class="clearfix"></div>
</div>
<div class="well well-small">
    <div class="row-fluid">
        <div class="span4">
            <img src="http://placehold.it/270x250&text=Resim Yok">
        </div>
        <div class="span8">
            <table class="table table-striped">
                <tbody>
                    <tr>    
                        <th>SKU</th>
                        <td>{{ entity.sku }}</td>
                    </tr>
                    <tr>    
                        <th>Name</th>
                        <td>{{ entity.name }}</td>
                    </tr>
                    <tr>    
                        <th>Description</th>
                        <td>{{ entity.description }}</td>
                    </tr>
                    <tr>    
                        <th>Price</th>
                        <td>{{ entity.price }}</td>
                    </tr>
                    <tr>    
                        <th>Stock</th>
                        <td><span class="label label-info">{{ entity.stock }}</span></td>
                    </tr>
                </tbody>
            </table>
        </div>
            <div class="clearfix"></div>
    </div>
</div>
<div>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Option</th>
                <th>Taxation Category</th>
                <th>Shipping Category</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    <ul>
                    {% for option in entity.options %}
                         <li>{{ option }}</li>        
                    {% endfor %}
                    </ul>
                </td>
                <td>
                    {% if entity.taxationCategory %}
                        {{ entity.taxationCategory }}
                    {% else %}
                        Null
                    {% endif %}
                </td>
                <td>
                    {% if entity.shippingCategory %}
                        {{ entity.shippingCategory }}
                    {% else %}
                        Null
                    {% endif %}
                </td>
            </tr>
        </tbody>
    </table>
</div>
<div class="well well-small">
    <a href="{{ path('product_variant_show',{'id': entity.id}) }}" class="btn btn-primary"><i class="icon-plus icon-white"></i> Create Variant</a>
    <a href="#" class="btn"><i class="icon-pencil"></i> Edit Variant</a>
    <a href="{{ path('product_variant_generate',{'id': entity.id}) }}" class="btn btn-info"><i class="icon-random icon-white"></i> Generate Variant</a>
</div>
<div>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>SKU</th>
                <th style="min-width:100px">Avaible Date</th>
                <th>Option Set</th>
                <th>Price</th>
                <th>Stock</th>
                <th>Avaible</th>
                <th>Shipping Category</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {% for prod in entity.children %}
            <tr>
                <td>{{ prod.sku }}</td>
                <td>{{ prod.avaibleOn | date }}</td>
                <td>
                    <ul>
                    {% for var in prod.variantoptions %}
                        <li>{{ var.option }} : {{ var.value }}</li>
                    {% endfor %}
                    </ul>
                </td>
                <td>{{ prod.price }}</td>
                <td><span class="label label-success">{{ prod.stock }}</span></td>
                <td>{% if prod.avaible %}<label class="label label-success">Yes</label>{% else %}<span class="label">No</span>{% endif %}</td>
                <td>{{ prod.shippingCategory }}</td>
                <td>
                    <div class="btn-group">
                        <a href="#" class="btn btn-small btn-primary">
                            <i class="icon-pencil icon-white"></i> Edit
                        </a>
                        <a href="#" class="btn btn-small btn-danger">
                            <i class="icon-trash icon-white"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>        
</div>
{% endblock %}