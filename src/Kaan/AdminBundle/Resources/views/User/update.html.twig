{% extends 'AdminBundle::layout.html.twig' %}
{% block content %}
<div class="page-header">
    <h1>Update User</h1>
</div>
<form action="{{ path('user_update', { 'id': entity.id }) }}" class="form-horizontal" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form,{'form_type': 'horizontal'}) }}
  <div class="control-group">
    <div class="controls">
      <button type="submit" class="btn">Update</button>
    </div>
  </div>
</form>
<div class="btn-group pull-left">
    <a class="btn" href="{{ path('user_homepage') }}">
        <i class="icon-circle-arrow-left"></i> Back
    </a>
</div>

<form action="{{ path('user_delete', { 'id': entity.id }) }}" method="post" class="pull-right">
    {{ form_widget(delete_form) }}
        <button class="btn btn-danger" type="submit"><i class="icon-white icon-trash"></i> Delete</button>
</form>

{% endblock %}
{% block javascript %}
<script>
    $(document).ready(function(){
        $('.chosen').chosen({allow_single_deselect:true});
    });
</script>
{% endblock %}