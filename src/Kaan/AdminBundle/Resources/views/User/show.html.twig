{% extends 'AdminBundle::layout.html.twig' %}
{% block content %}
<div class="page-header">
    <h1>User</h1>
</div>
<table class="record_properties table table-bordered">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ entity.username }}</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{ entity.email }}</td>
        </tr>
        <tr>
            <th>User Adress</th>
            <td><a href="{{ path('adress',{'id':entity.id}) }}">Show User Adress</a></td>
        </tr>
        <tr>
            <th>Yetkiler</th>
            <td>
                <ul>
                    {% for role in entity.roles %}
                        <li>{{ role }}</li>
                    {% endfor %}
                    </ul>
                </td>
            </tr>
            <tr>
                <th>Created At</th>
                <td>{{ entity.createdAt|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>
    <div class="btn-group pull-right">
        <a class="btn" href="{{ path('user_homepage') }}">
            <i class="icon-circle-arrow-left"></i> Back
        </a>
        <a class="btn btn-primary" href="{{ path('user_update', { 'id': entity.id }) }}">
            <i class="icon-pencil icon-white"></i> Edit
        </a>
    </div>
    <form action="{{ path('user_delete', { 'id': entity.id }) }}" method="post">
    {{ form_widget(delete_form) }}
            <button class="btn-danger btn" type="submit">Delete</button>
        </form>
{% endblock %}