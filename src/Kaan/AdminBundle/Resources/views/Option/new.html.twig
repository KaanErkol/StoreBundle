{% extends 'AdminBundle::layout.html.twig' %}
{% block content %}
<div class="page-header">
    <h1>Option Creation</h1>
</div>
{{ form_errors(form) }}
<form action="{{ path('option_create') }}" method="post" class="form-horizontal" {{ form_enctype(form) }}>
    {{ form_widget(form) }}
  <div class="control-group">
    <div class="controls">
      <button type="submit" class="btn">Create</button>
    </div>
  </div>
</form>

<ul class="record_actions unstyled">
    <li>
        <a class="btn" href="{{ path('option') }}">
            <i class="icon-circle-arrow-left"></i> Back to the list
        </a>
    </li>
</ul>
{% endblock %}
